{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "lib",

    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "lib",
    "node_modules",
    "../node_modules",
    "**/*.spec.ts"
  ]
}
